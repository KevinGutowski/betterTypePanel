{
  "name": "bettertypepanel",
  "version": "0.2.0",
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "betterTypePanel",
    "manifest": "src/manifest.json",
    "main": "bettertypetool.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.5.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KevinGutowski/betterTypePanel"
  },
  "author": "Kevin Gutowski <kskiviolin@gmail.com>",
  "description": "A sketch plugin to help manage common OpenType properties"
}
